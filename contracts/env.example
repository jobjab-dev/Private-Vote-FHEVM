# ===================================================================
# PrivateVote-FHEVM Backend Configuration (Smart Contracts)
# ===================================================================
# Copy this file to .env and configure your deployment values

# Private Key for deployment (64 characters)
PRIVATE_KEY="0x1234567890123456789012345678901234567890123456789012345678901234"

# RPC URLs
SEPOLIA_RPC_URL="https://ethereum-sepolia-rpc.publicnode.com"
ETHEREUM_RPC_URL="https://ethereum-rpc.publicnode.com"
LOCAL_RPC_URL="http://127.0.0.1:8545"

# API Keys (optional, can use public RPCs above)
INFURA_API_KEY="your_infura_project_id_here"
ETHERSCAN_API_KEY="your_etherscan_api_key_for_verification"

# Owner Configuration  
OWNER_ADDRESS="0x..." # Contract owner address (can be same as PRIVATE_KEY address)

# Gas Configuration
USE_FIXED_GAS="false"                    # true = use fixed values, false = auto estimate with viem
GAS_PRICE="20"                          # Gas price in gwei (simple number like 20, 30, 50)
GAS_LIMIT="8000000"                     # Gas limit (when USE_FIXED_GAS=true)
GAS_PRICE_MULTIPLIER="1.1"              # Multiply estimated gas price by this (when USE_FIXED_GAS=false)

# FHEVM Configuration (Sepolia Testnet)
FHEVM_GATEWAY_URL="https://gateway.sepolia.zama.ai"
FHEVM_KMS_URL="https://kms.sepolia.zama.ai"

# Contract Addresses (will be populated after deployment)
PRIVATEVOTE_CONTRACT_ADDRESS=""

# Development
NODE_ENV="development"
DEBUG="true"
