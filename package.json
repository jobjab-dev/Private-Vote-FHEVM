{
  "name": "privatevote-fhevm-monorepo",
  "version": "1.0.0",
  "description": "Private Voting dApp using Zama FHEVM - Monorepo structure",
  "private": true,
  "workspaces": [
    "app",
    "contracts"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:contracts && npm run install:frontend",
    "install:contracts": "cd contracts && npm install",
    "install:frontend": "cd app && npm install",
    
    "clean": "npm run clean:contracts && npm run clean:frontend",
    "clean:contracts": "cd contracts && npm run clean",
    "clean:frontend": "cd app && npm run build:clean",
    
    "build": "npm run build:contracts && npm run build:frontend", 
    "build:contracts": "cd contracts && npm run build",
    "build:frontend": "cd app && npm run build",
    
    "dev:contracts": "cd contracts && npm run compile",
    "dev:frontend": "cd app && npm run dev",
    
    "test": "npm run test:contracts",
    "test:contracts": "cd contracts && npm run test",
    
    "deploy:sepolia": "cd contracts && npm run deploy:sepolia",
    "deploy:local": "cd contracts && npm run deploy:local",
    
    "lint": "npm run lint:contracts && npm run lint:frontend",
    "lint:contracts": "cd contracts && npm run lint",
    "lint:frontend": "cd app && npm run lint",
    
    "start": "npm run dev:frontend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Zama Builder Track Participant",
  "license": "BSD-3-Clause-Clear"
}